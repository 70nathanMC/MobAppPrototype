<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/appWhite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/listTutorImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/james"
            app:shapeAppearanceOverlay="@style/roundedImage" />

        <TextView
            android:id="@+id/tvMeetingSubjectAndBranch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="70dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="92dp"
            android:fontFamily="@font/medium"
            android:text="Calculus - Limits"
            android:textColor="@color/appBlack"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvTutorFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMeetingSubjectAndBranch"
            android:layout_alignParentStart="true"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="14dp"
            android:layout_toStartOf="@+id/tvMeetingDay"
            android:fontFamily="@font/light"
            android:text="John Bautista"
            android:textColor="@color/appBlack"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvMeetingDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMeetingSubjectAndBranch"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/light"
            android:text="StartTime"
            android:textColor="@color/appBlack"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/appGreen"
    app:cardCornerRadius="20dp"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/topLine"
            android:layout_width="0.6dp"
            android:layout_height="78dp"
            android:background="@color/white"
            android:layout_marginTop="15dp"
            android:layout_marginStart="90dp" />

        <TextView
            android:id="@+id/tvMeetingDay"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:layout_marginStart="2dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="320dp"
            android:fontFamily="@font/medium"
            android:text="Mon"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvMeetingDate"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvMeetingDay"
            android:gravity="center"
            android:layout_marginTop="-9dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="320dp"
            android:fontFamily="@font/bold"
            android:text="16"
            android:textColor="@color/white"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tvMeetingMonth"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvMeetingDate"
            android:gravity="center"
            android:layout_marginTop="-13dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="320dp"
            android:layout_marginBottom="14dp"
            android:fontFamily="@font/medium"
            android:text="Sept"
            android:textColor="@color/white"
            android:textSize="17sp" />


        <TextView
            android:id="@+id/tvMeetingSubjectAndBranch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="110dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/bold"
            android:text="Calculus - Limits"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvMeetingSite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMeetingSubjectAndBranch"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="110dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/light"
            android:text="Google Meet"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvMeetingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMeetingSite"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/light"
            android:text="StartTime - EndTime"
            android:layout_marginStart="110dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="14dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
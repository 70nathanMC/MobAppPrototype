<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.StudentMainActivity">

    <RelativeLayout
        android:id="@+id/loadingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:visibility="visible">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutMainActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationBar"
        android:visibility="visible">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivUserImageDashboard"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="32dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/sarahm"
                        tools:ignore="ContentDescription"
                        android:clickable="true"
                        android:focusable="true"
                        app:shapeAppearanceOverlay="@style/roundedImage"/>

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/light"
                        android:text="Welcome!"
                        android:textColor="@color/appBlack"
                        android:textSize="15sp"
                        app:layout_constraintStart_toStartOf="@+id/tvUserFirstNameDashboard"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvUserFirstNameDashboard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="-10dp"
                        android:fontFamily="@font/bold"
                        android:text="Sarah"
                        android:textColor="@color/appBlack"
                        android:textSize="15sp"
                        app:layout_constraintStart_toEndOf="@+id/ivUserImageDashboard"
                        app:layout_constraintTop_toBottomOf="@+id/textView2" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivReadyToLearn"
                        android:layout_width="354dp"
                        android:layout_height="143dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/btnFindTutor"
                        app:layout_constraintStart_toStartOf="@+id/btnFindTutor"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="1.0"
                        android:background="@drawable/image_view_round_casing_1"
                        android:scaleType="centerCrop"
                        android:clickable="true"
                        android:focusable="true"
                        android:cropToPadding="true"
                        android:clipToOutline="true"
                        app:srcCompat="@drawable/dbfinal" />

                    <Button
                        android:id="@+id/btnFindTutor"
                        android:layout_width="292dp"
                        android:layout_height="48dp"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="90dp"
                        android:layout_marginBottom="30dp"
                        android:alpha="0.9"
                        android:backgroundTint="@color/appWhite"
                        android:drawableLeft="@drawable/search"
                        android:fontFamily="@font/regular"
                        android:gravity="start|center_vertical"
                        android:text="@string/btnFindTutor_text"
                        android:textColor="@color/appGray8"
                        android:clickable="true"
                        android:focusable="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/ivReadyToLearn" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:fontFamily="@font/bold"
                        android:text="Quiz Quest"
                        android:textColor="@color/appBlack"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="-5dp"
                        android:fontFamily="@font/regular"
                        android:text="Test your Knowledge!"
                        android:textColor="@color/appBlack"
                        android:textSize="14sp" />

                </LinearLayout>

                <HorizontalScrollView
                    android:id="@+id/hsvDashboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:fadeScrollbars="false">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivPhysics"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/physics" />

                        <ImageView
                            android:id="@+id/ivCalculus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="35dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/calculus" />

                        <ImageView
                            android:id="@+id/ivGenMath"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="35dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            app:srcCompat="@drawable/genmath" />

                        <ImageView
                            android:id="@+id/ivScience"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="35dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/science" />

                        <ImageView
                            android:id="@+id/ivHistory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/history" />

                        <ImageView
                            android:id="@+id/ivLiterature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="35dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/lit" />

                        <ImageView
                            android:id="@+id/ivStatistics"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="35dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/stats" />

                        <ImageView
                            android:id="@+id/ivPhilosophy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="35dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="40dp"
                            app:srcCompat="@drawable/science" />

                    </LinearLayout>
                </HorizontalScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView18"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:srcCompat="@drawable/bar" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="600dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="350dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="30dp"
                        app:cardBackgroundColor="@color/appWhite"
                        app:cardCornerRadius="16dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp">

                            <ImageView
                                android:id="@+id/ivJumpToMeetings"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="60dp"
                                android:layout_marginBottom="348dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/textView16"
                                app:layout_constraintTop_toBottomOf="@+id/textView14"
                                android:background="@drawable/image_view_round_casing_2"
                                android:scaleType="centerCrop"
                                android:clickable="true"
                                android:focusable="true"
                                android:cropToPadding="true"
                                android:clipToOutline="true"
                                app:srcCompat="@drawable/sched" />

                            <TextView
                                android:id="@+id/textView14"
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:drawableEnd="@drawable/arrow_right"
                                android:layout_marginTop="15dp"
                                android:fontFamily="@font/bold"
                                android:text="Agenda"
                                android:textSize="20sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/textView15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="35dp"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/regular"
                                android:text="7:00 AM"
                                android:textColor="@color/appGray6"
                                android:textSize="15sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textView14" />

                            <TextView
                                android:id="@+id/textView16"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="40dp"
                                android:fontFamily="@font/regular"
                                android:text="8:00 AM"
                                android:textColor="@color/appGray6"
                                android:textSize="15sp"
                                app:layout_constraintEnd_toEndOf="@+id/textView15"
                                app:layout_constraintStart_toStartOf="@+id/textView15"
                                app:layout_constraintTop_toBottomOf="@+id/textView15" />

                            <TextView
                                android:id="@+id/textView17"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="40dp"
                                android:fontFamily="@font/regular"
                                android:text="9:00 AM"
                                android:textColor="@color/appGray6"
                                android:textSize="15sp"
                                app:layout_constraintEnd_toEndOf="@+id/textView16"
                                app:layout_constraintStart_toStartOf="@+id/textView16"
                                app:layout_constraintTop_toBottomOf="@+id/textView16" />

                            <TextView
                                android:id="@+id/textView18"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="40dp"
                                android:fontFamily="@font/regular"
                                android:text="10:00 AM"
                                android:textColor="@color/appGray6"
                                android:textSize="15sp"
                                app:layout_constraintEnd_toEndOf="@+id/textView17"
                                app:layout_constraintStart_toStartOf="@+id/textView17"
                                app:layout_constraintTop_toBottomOf="@+id/textView17" />

                            <TextView
                                android:id="@+id/textView19"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="40dp"
                                android:fontFamily="@font/regular"
                                android:text="11:00 AM"
                                android:textColor="@color/appGray6"
                                android:textSize="15sp"
                                app:layout_constraintEnd_toEndOf="@+id/textView18"
                                app:layout_constraintStart_toStartOf="@+id/textView18"
                                app:layout_constraintTop_toBottomOf="@+id/textView18" />

                            <TextView
                                android:id="@+id/textView20"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="40dp"
                                android:fontFamily="@font/regular"
                                android:text="12:00 PM"
                                android:textColor="@color/appGray6"
                                android:textSize="15sp"
                                app:layout_constraintEnd_toEndOf="@+id/textView19"
                                app:layout_constraintStart_toStartOf="@+id/textView19"
                                app:layout_constraintTop_toBottomOf="@+id/textView19" />

                            <TextView
                                android:id="@+id/textView21"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="40dp"
                                android:fontFamily="@font/regular"
                                android:text="1:00 PM"
                                android:textColor="@color/appGray6"
                                android:textSize="15sp"
                                app:layout_constraintEnd_toEndOf="@+id/textView20"
                                app:layout_constraintStart_toStartOf="@+id/textView20"
                                app:layout_constraintTop_toBottomOf="@+id/textView20" />

                            <TextView
                                android:id="@+id/textView22"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="40dp"
                                android:fontFamily="@font/regular"
                                android:text="2:00 PM"
                                android:textColor="@color/appGray6"
                                android:textSize="15sp"
                                app:layout_constraintEnd_toEndOf="@+id/textView21"
                                app:layout_constraintStart_toStartOf="@+id/textView21"
                                app:layout_constraintTop_toBottomOf="@+id/textView21" />

                            <TextView
                                android:id="@+id/textView23"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="40dp"
                                android:fontFamily="@font/regular"
                                android:text="3:00 PM"
                                android:textColor="@color/appGray6"
                                android:textSize="15sp"
                                app:layout_constraintEnd_toEndOf="@+id/textView22"
                                app:layout_constraintStart_toStartOf="@+id/textView22"
                                app:layout_constraintTop_toBottomOf="@+id/textView22" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationBar"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        app:menu="@menu/bottom_nav"
        >

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>